<body>
  <%- include('../includes/navigation.ejs')%>
<main>
   <% if (orders.length <= 0) { %>
    <h1>Nothing here</h1>
    <%} else {%>
      <ul>
        <% orders.forEach( order => { %> 
         
          <li> 
          <h1> #<%= order._id %> </h1>
            <ul>
                <% for (product of order.items) { %>
                    <li> <%= product.title %> (<%= product.quantity %>)</li>
                  <% } %>
            </ul>
          </li>
        <% }) %>
      </ul>
      <% } %>
</main>
